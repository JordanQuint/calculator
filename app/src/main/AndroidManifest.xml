<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.awakeplace.pokerchipsmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateGame"
            android:label="@string/title_activity_create_game"
            android:noHistory="true"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.awakeplace.pokerchipsmanager.MainActivity" />
        </activity>
        <activity
            android:name=".PokerGameActivity"
            android:label="@string/title_activity_poker_game"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.awakeplace.pokerchipsmanager.MainActivity" />
        </activity>
        <activity
            android:name=".SelectGame"
            android:label="@string/title_activity_select_game"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.awakeplace.pokerchipsmanager.MainActivity" />
        </activity>
        <activity
            android:name=".RaiseBet"
            android:label="@string/title_activity_poker_raise_bet" >
        </activity>
        <activity
            android:name="com.example.jordanquint.pokerchipsmanager.PickWinner"
            android:label="@string/title_activity_pick_winner" >
        </activity>
    </application>

</manifest>
